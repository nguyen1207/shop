<div class="mt-4">
    <div class="row"> 
        {{#each products}}
        <div class="col-sm-6 col-lg-3">
            <div class="card card-item align-items-center" style="height: 17rem; border: none">
                <a href="/category/{{this.category}}/{{this.name}}/{{this._id}}" style="text-decoration : none; color : #000;">
                    <img class="card-img-top image-home mt-2 rounded mx-auto d-block" src="{{this.image}}" alt="Card image cap">
                    <h5 class="card-title name-home rounded text-center">{{this.name}}</h5>
                    <p class="card-text">${{this.price}}</p>
                </a>     
            </div>
        </div>
        {{/each}}
    </div>
</div>